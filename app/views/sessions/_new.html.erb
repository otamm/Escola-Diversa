<% provide(:title, "Log In") %>
<h1>Log In</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %> <!-- it's not something like "form_for(@user)" because the @user instance variable as an argument to "form_for" method is made (more below) -->
                                                      <!-- viable through ActiveRecord, and our Sessions controller doesn't use AR as it doesn't save anything to the database.-->
      <div>
        <%= f.label :login %>
        <%= f.text_field :login, class: 'form_control' %>
      </div>
      <div>
        <%= f.label :password %>
        <%= link_to "(Forgot password?)", new_password_reset_path %>
        <%= f.password_field :password, class: 'form_control' %>
      </div>
      <div>
        <%= f.label :remember_me, class: 'checkbox inline' do %>
          <%= f.check_box :remember_me %>
          <span> Remember me on this computer </span>
        <% end %>
      </div>
    <div>
      <%= f.submit "Entrar" %>
    </div>
    <% end %>
  </div><!-- col-md-6 col-md-offset-3 -->
</div><!-- row -->

